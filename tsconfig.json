{
  "compilerOptions": {
    "jsx": "react",

    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es2015", "es2016", "es2017", "dom"],

    "declaration": true,
    "sourceMap": true,

    "declarationDir": "dist/types",
    "outDir": "dist/lib",

    "newLine": "LF",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true // https://www.typescriptlang.org/docs/handbook/release-notes/typescript-2-7.html => "esModuleInterop"
  },
  "include": ["src/**/*"],
  "exclude": [".git", "node_modules"]
}
