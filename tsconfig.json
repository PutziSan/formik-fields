{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es6",

    "jsx": "preserve",

    "lib": ["es6", "dom"],

    "allowJs": true,

    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*"],
  "exclude": [".git", "node_modules"]
}
